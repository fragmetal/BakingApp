<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:textSize="@dimen/text_low_size"
        android:textStyle="bold"
        tools:text="3500" />

    <TextView
        android:id="@+id/tv_quantity_measure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/tv_marginLeft"
        android:layout_toRightOf="@+id/tv_quantity"
        android:textSize="@dimen/text_low_size"
        tools:text="G" />

    <TextView
        android:id="@+id/tv_of"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/tv_marginLeft"
        android:layout_toRightOf="@+id/tv_quantity_measure"
        android:text="@string/tv_recipe_ingredient_of"
        android:textSize="@dimen/text_low_size" />

    <TextView
        android:id="@+id/tv_ingredient"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/tv_marginLeft"
        android:layout_toRightOf="@+id/tv_of"
        android:textSize="@dimen/text_low_size"
        tools:text="Chocolate 70 %" />
</RelativeLayout>