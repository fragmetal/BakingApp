<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="3dp"
    android:elevation="3dp"
    card_view:cardCornerRadius="4dp">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/recipes_item_selector"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/iv_recipe_item_thumbNail"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:src="@drawable/chef_placeholder_square" />
        <TextView
            android:id="@+id/tv_recipestep_shortdescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_horizontal_margin"
            android:textSize="@dimen/text_low_size"
            android:layout_toRightOf="@id/iv_recipe_item_thumbNail"
            tools:text="Recipe Introduction" />
    </RelativeLayout>
</android.support.v7.widget.CardView>